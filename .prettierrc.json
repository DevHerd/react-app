{
    "semi": true,
    "singleQuote": true,
    "trailingComma": "all",
    "endOfLine": "auto",
    "jsxSingleQuote": false,
    "arrowParens": "always",
    "bracketSpacing": true,
    "printWidth": 100,
    "tabWidth": 2,
    "overrides": [
        {
            "files": [
                "**/*.css",
                "**/*.html"
            ],
            "options": {
                "singleQuote": false
            }
        },
        {
            "files": [
                "**/*.css"
            ],
            "options": {
                "printWidth": 120
            }
        }
    ]
}